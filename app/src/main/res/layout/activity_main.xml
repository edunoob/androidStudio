<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/radioGroupSelecciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:id="@+id/rb_brasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/logoBrasil"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:contentDescription="Logo Brasil"
                android:scaleType="centerCrop"
                android:src="@drawable/brasil" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nombreBrasil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brasil FC"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/infoBrasil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brazuca, 5 copas del mundo"
                    android:textSize="14sp" />
            </LinearLayout>

            <RadioButton
                android:id="@+id/radio_brasil_control"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="false"
                android:focusable="false" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rb_argentina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/logoArgentina"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:contentDescription="Logo Argentina"
                android:scaleType="centerCrop"
                android:src="@drawable/argentina" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nombreArgentina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Argentina FC"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/infoArgentina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="La albiceleste, 3 copas del mundo"
                    android:textSize="14sp" />
            </LinearLayout>

            <RadioButton
                android:id="@+id/radio_argentina_control"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="false"
                android:focusable="false" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rb_uruguay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/logoUruguay"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:contentDescription="Logo Uruguay"
                android:scaleType="centerCrop"
                android:src="@drawable/uruguay" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nombreUruguay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Uruguay FC"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/infoUruguay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="La garra charrúa, 2 copas del mundo"
                    android:textSize="14sp" />
            </LinearLayout>

            <RadioButton
                android:id="@+id/radio_uruguay_control"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="false"
                android:focusable="false" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rb_peru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/logoPeru"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:contentDescription="Logo Peru"
                android:scaleType="centerCrop"
                android:src="@drawable/peru" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nombrePeru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perú FC"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/infoPeru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="La bicolor, corazón y garra"
                    android:textSize="14sp" />
            </LinearLayout>

            <RadioButton
                android:id="@+id/radio_peru_control"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="false"
                android:focusable="false" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rb_colombia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logoColombia"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:contentDescription="Logo Colombia"
                android:scaleType="centerCrop"
                android:src="@drawable/colombia" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nombreColombia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Colombia FC"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/infoColombia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="La tricolor, pasión y sabor"
                    android:textSize="14sp" />
            </LinearLayout>

            <RadioButton
                android:id="@+id/radio_colombia_control"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="false"
                android:focusable="false" />
        </LinearLayout>

    </RadioGroup>
</ScrollView>